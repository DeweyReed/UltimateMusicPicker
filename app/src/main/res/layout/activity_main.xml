<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnActivity"
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Standard Activity" />

        <Button
            android:id="@+id/btnDialog"
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Standard Dialog" />

        <Button
            android:id="@+id/btnSystem"
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System Ringtone Picker Dialog" />

        <Button
            android:id="@+id/btnAllDeviceRingtones"
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Device Ringtones Dialog" />

        <Button
            android:id="@+id/btnAdditionalRingtones"
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Ringtones Activity" />

    </LinearLayout>

</ScrollView>