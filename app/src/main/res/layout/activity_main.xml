<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openPermission"
            android:text="Manage App Permission"
            app:backgroundTint="@android:color/holo_red_light" />

        <Button
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openStandardActivity"
            android:text="Standard Activity" />

        <Button
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openStandardDialog"
            android:text="Standard Dialog" />

        <Button
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="emulateSystemDialog"
            android:text="System Ringtone Picker Dialog" />

        <Button
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showOnlyDeviceRingtones"
            android:text="All Device Ringtones Dialog" />

        <Button
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="useAdditionalRingtones"
            android:text="Additional Ringtones Activity" />

        <Button
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="enableMultiSelect"
            android:text="Multi Select Activity" />

        <Button
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="safPick"
            android:text="Storage Access Framework Dialog" />

        <Button
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onlySafPick"
            android:text="Only Storage Access Framework" />

        <Button
            style="@style/ExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ephemeralDialog"
            android:text="Ephemeral Dialog\n(Doesn't survive configuration changes but gives you result directly)" />

    </LinearLayout>

</ScrollView>